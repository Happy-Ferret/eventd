<refentry id="eventd-dbus">
    <xi:include xmlns:xi="http://www.w3.org/2001/XInclude" href="common-man.xml" xpointer="refentryinfo" />

    <refmeta>
        <refentrytitle>eventd-dbus</refentrytitle>
        <manvolnum>1</manvolnum>
    </refmeta>

    <refnamediv>
        <refname>eventd-dbus</refname>
        <refpurpose>eventd org.freedesktop.Notification D-Bus interface plugin</refpurpose>
    </refnamediv>

    <refsynopsisdiv>
        <cmdsynopsis>
            <command>eventd</command>
            <arg choice="opt" rep="repeat">OPTIONS</arg>
        </cmdsynopsis>
    </refsynopsisdiv>

    <refsect1>
        <title>Description</title>
        <para>
            This plugin implements the org.freedesktop.Notification D-Bus interface.
        </para>
    </refsect1>

    <refsect1>
        <title>Options</title>

        <variablelist>
            <varlistentry>
                <term><option>-D</option></term>
                <term><option>--no-dbus</option></term>
                <listitem>
                    <para>Disable D-Bus interface</para>
                </listitem>
            </varlistentry>
        </variablelist>
    </refsect1>

    <xi:include xmlns:xi="http://www.w3.org/2001/XInclude" href="common-man.xml" xpointer="see-also" />
</refentry>
